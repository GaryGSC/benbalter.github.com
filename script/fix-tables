#!/usr/bin/env ruby
# frozen_string_literal: true

# Fixes table formatting broken by remark

REGEX = /\|\n\n(\s*?)\{/

files = Dir['_posts/*']
files.each do |path|
  content = File.read(path)
  next unless content.match? REGEX

  content.gsub!(REGEX, "|\n\1{")
  content.delete!('')

  File.write(path, content)
end
